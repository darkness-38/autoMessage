<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/text_light"
            android:contentDescription="Geri"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_light"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Kime / Phone Number -->
            <LinearLayout
                android:id="@+id/cardForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number_label"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_input"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/phone_number_hint"
                        android:inputType="phone"
                        android:textColor="@color/text_light"
                        android:textColorHint="@color/text_secondary_light"
                        android:textSize="16sp"/>

                    <ImageButton
                        android:id="@+id/btnPickContact"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="@color/text_secondary_light"
                        android:contentDescription="Rehber"/>
                </LinearLayout>

                <!-- Mesajınız / Message -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_label"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:hint="@string/message_hint"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:gravity="top"
                    android:textColor="@color/text_light"
                    android:textColorHint="@color/text_secondary_light"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Date and Time -->
            <LinearLayout
                android:id="@+id/cardDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:baselineAligned="false">

                <!-- Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_label"
                        android:textColor="@color/text_light"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <Button
                        android:id="@+id/btnDate"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input"
                        android:text="25 Aralık 2024"
                        android:textColor="@color/text_light"
                        android:textAllCaps="false"
                        android:gravity="center_vertical|start"
                        android:drawableEnd="@android:drawable/ic_menu_today"
                        android:drawableTint="@color/text_secondary_light"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_label"
                        android:textColor="@color/text_light"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <Button
                        android:id="@+id/btnTime"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input"
                        android:text="14:30"
                        android:textColor="@color/text_light"
                        android:textAllCaps="false"
                        android:gravity="center_vertical|start"
                        android:drawableEnd="@android:drawable/ic_menu_recent_history"
                        android:drawableTint="@color/text_secondary_light"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- Hidden TextView to prevent crash until Code is updated, but I will update Code immediately -->
            <TextView
                android:id="@+id/tvSelectedDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="32dp">

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_primary"
            android:text="@string/schedule_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnListMessages"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_secondary"
            android:text="@string/view_scheduled_button"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@null"/>
    </LinearLayout>

</LinearLayout>
